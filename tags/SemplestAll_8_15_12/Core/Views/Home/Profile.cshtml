@model Semplest.Core.Models.CampaignSetupModel
@Html.AntiForgeryToken()
@{
    ViewBag.Title = "Campaign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Navbar{
    <div id="panelbar-profile">
    </div>
    <script src="@Url.Content("~/Scripts/PanelBar.js")" type="text/javascript"> </script>
}
<script src="@Url.Content("~/Scripts/Profile.js")" type="text/javascript"> </script>
<div id="exampleTitleBg1">
    <h1 id="exampleTitle">
        <span class="exampleIcon overviewIcon"></span>My Account
    </h1>
    <div id="examplesThemeChooser" style="margin-right: 120px">
        <input type="button" class="k-button" value="Insurance" id="btnOne" />
        <input type="button" class="k-button" value="Safty Tips" id="btnTwo" />
        <input type="button" class="k-button" value="Agents" id="btnThree" />
    </div>
</div>
<div id="exampleWrap">
    <div id="example" class="k-content">
        @using (Html.BeginForm("CampaignSetup", "Campaign", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
            <div class="configuration1">
                <ul class="options">
                    <li>
                        @Html.ActionLink("Create New Product Group", "CampaignSetup", "Campaign", new {area = "Campaign"}, null)
                    </li>
                    <li>
                        @Html.ActionLink("Create Duplicate Product Group", "CampaignSetup", "Campaign", new {area = "Campaign"}, null)
                    </li>
                </ul>
            </div>
        }
        <style scoped>
            .configuration1 {
                -moz-border-radius: 8px;
                -moz-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.45), inset 0 0 30px rgba(0, 0, 0, 0.07);
                -webkit-border-radius: 8px;
                -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.45), inset 0 0 30px rgba(0, 0, 0, 0.07);
                background-image: none;
                border: 1px solid inherit;
                border-radius: 8px;
                margin: 0 0 0 15px;
                min-width: 170px;
                padding: 10px;
            }

            .configuration1 table { background-color: #fffbff; }

            .configuration1 .infoHead {
                background-position: 0 -178px;
                border-bottom: 1px solid #999;
                display: inline-block;
                font-size: 14px;
                margin-bottom: 10px;
                margin-top: 0;
                padding-bottom: 5px;
                text-indent: 0;
            }

            .configuration1 .k-textbox1 { margin-left: 7px; }

            .configuration1 .options li {
                display: block;
                margin: 0;
                padding: 0.2em 0;
            }

            #example h3 { clear: both; }

            #example .code-sample {
                float: left;
                margin-bottom: 20px;
                width: 60%;
            }

            #example .output {
                float: left;
                margin-left: 4%;
                width: 24%;
            }
        </style>
    </div>
</div>