@using System.Globalization
@model IEnumerable<SemplestAdminApp.Models.EmployeeSetup>
           
@{
    ViewBag.Title = "Index";
}
@section Title{
Employee Setup
}
@section Navbar{
    <script src="@Url.Content("~/Scripts/PanelBar.js")" type="text/javascript"></script>
}
@section Links{
    @Html.Partial("TopMenu")
}
@using (Html.BeginForm("Index"))
{
  <div class="configuration1">
        <ul class="options">
            <li>Search
                <input type="text" id="Search" name="search" class="k-textbox"
                    required validationmessage="Please enter {0}" />
                     <input type="submit" value="Search" class="k-button" />
            </li>

        </ul>
    </div>

}

    
@if (!Model.Any())
    {
        // table is empty
    }
else
    { 
    <div class="tableresults">
    <table>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Active
            </th>
            <th>
                Role
            </th>
            <th>
                Email
            </th>
        </tr>
        @foreach (var item in Model)
        {
             <tr>
                <td>
                @Html.RouteLink(item.FirstName.ToString(), new { Controller = "EmployeeSetup", action = "Edit", id = item.UserPK  })
                </td>
                <td>
                    @Html.RouteLink(item.LastName.ToString(), new { Controller = "EmployeeSetup", action = "Edit", id = item.UserPK })
                </td>
                <td>
                    @Html.RouteLink( "1" , new { Controller = "EmployeeSetup", action = "Edit", id = item.UserPK })
                </td>
                <td>
                    @Html.RouteLink(item.RoleName , new { Controller = "EmployeeSetup", action = "Edit", id = item.UserPK })
                </td>
                <td>
                    @Html.RouteLink(item.Email, new { Controller = "EmployeeSetup", action = "Edit", id = item.UserPK })
                </td>        
            </tr>
        }
    </table>
    </div>
    }


