<h2>Customer Accounts:</h2>

@using (Html.BeginForm("Index"))
{
    
<label>Search:<br /><input type="text"   name="usersearch" />
</label>

<label>Account #:<br /><input type="text" name="accountnumbersearch" />
</label>

<label>Email:<br /><input type="text" name="emailsearch" />
</label>

<input type="submit" value="Go"  />
}


@if (Model.Count()==0 )
{
 // table is empty
}
else
{ 
<table>
    <tr>
        <th>
            Customer
        </th>
        <th>
            Account #
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.RouteLink(item.Customer, new { Controller = "ClientAccount", action = "Index", id = item.AccountNumber })
        </td>
        <td>
            @Html.RouteLink(item.AccountNumber.ToString(), new { Controller = "ClientAccount", action = "Index", id = item.AccountNumber })
        </td>
        <td>
            @Html.RouteLink(item.FirstName, new { Controller = "ClientAccount", action = "Index", id = item.AccountNumber })
        </td>
        <td>
            @Html.RouteLink(item.LastName, new { Controller = "ClientAccount", action = "Index", id = item.AccountNumber })
        </td>
        <td>
            @Html.RouteLink(item.Email, new { Controller = "ClientAccount", action = "Index", id = item.AccountNumber })
        </td>        
    </tr>
}
</table>
    
}

