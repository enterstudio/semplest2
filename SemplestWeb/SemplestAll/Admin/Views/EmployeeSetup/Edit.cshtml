@model Semplest.Admin.Models.EmployeeSetupWithRolesModel
@section NavBar {
    <script src="@Url.Content("~/Scripts/PanelBar.js")" type="text/javascript"></script>
}
@section Title{
Edit Employee:
}
@section headscript{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.js")" type="text/javascript"> </script>
    <script type="text/jscript">
        $(document).ready(function () {
            $("#EmployeeSetup_HireDate").kendoDatePicker();
        });
        jQuery(function ($) {

            $("#EmployeeSetup_MiddleInitial").mask("a");
            //         $("#EmployeeSetup_HireDate").mask(("99/99/9999");
        });

    </script>
}
@section Links{
    @Html.Partial("TopMenu")
}
<style>
    label
    {
        text-align: left;
        width: 130px;
    }
    .initial
    {
        width: 40px;
    }
    .k-dropdownlist
    {
        width: 250px;
    }
    .k-datepicker
    {
        width: 135px;
    }
</style>
@using (Html.BeginForm("Edit"))
{
    <div id="productGroupModel">
        <div class="configuration">
            <ul class="options">
                <li>
                    @Html.LabelFor(model => model.EmployeeSetup.FirstName, new { @style = "text-align:left; width:130px;" })
                    @Html.TextBoxFor(model => model.EmployeeSetup.FirstName, new { @class = "k-textbox" })
                    @Html.ValidationMessageFor(model => model.EmployeeSetup.FirstName)
                </li>
                <li>
                    @Html.LabelFor(model => model.EmployeeSetup.MiddleInitial)
                    @Html.TextBoxFor(model => model.EmployeeSetup.MiddleInitial, new { @class = "k-textbox initial" })
                    @Html.ValidationMessageFor(model => model.EmployeeSetup.MiddleInitial)
                </li>
                <li>
                    @Html.LabelFor(model => model.EmployeeSetup.LastName)
                    @Html.TextBoxFor(model => model.EmployeeSetup.LastName, new { @class = "k-textbox" })
                    @Html.ValidationMessageFor(model => model.EmployeeSetup.LastName)
                </li>
                <li>
                    @Html.LabelFor(model => model.EmployeeSetup.Email)
                    @Html.TextBoxFor(model => model.EmployeeSetup.Email, new { @class = "k-textbox" })
                    @Html.ValidationMessageFor(model => model.EmployeeSetup.Email)
                </li>
                <li>
                    <label>
                        Hire Date:</label>
                    @Html.TextBoxFor(model => model.EmployeeSetup.HireDate, new { @class = "k-datepicker" })
                </li>
                <li>
                    <label>
                        Role</label>
                    @Html.DropDownListFor(r => r.SelectedRoleID, Model.Roles, new { @class = "k-dropdownlist" })
                </li>
                <li>
                    <label>
                        Employee Type</label>
                    @Html.DropDownListFor(r => r.SelectedEmployeeTypeID, Model.EmployeeTypes, new { @class = "k-dropdownlist" })
                </li>
                <li>
                    <label>
                        Reporting To</label>
                    @Html.DropDownListFor(r => r.SelectedReportingToID, Model.ReportingTo, new { @class = "k-dropdownlist" })
                </li>
                <li>
                    @Html.LabelFor(model => model.EmployeeSetup.UserID)
                    @Html.TextBoxFor(model => model.EmployeeSetup.UserID, new { @class = "k-textbox" })
                    @Html.ValidationMessageFor(model => model.EmployeeSetup.UserID)
                </li>
                <li>
                    @Html.LabelFor(model => model.EmployeeSetup.UserPassword)
                    @Html.PasswordFor(model => model.EmployeeSetup.UserPassword, new { @class = "k-textbox" })
                    @Html.ValidationMessageFor(model => model.EmployeeSetup.UserPassword)
                </li>
                <li>
                    <label>
                        Status</label><label style="text-align: left; margin-left: 10px">@Html.RadioButtonFor(model => model.EmployeeSetup.isActive, "True", new { @checked = "checked", @style = "text-align:left" })
                            Active
                            @Html.RadioButtonFor(model => model.EmployeeSetup.isActive, "False") Inactive</label>
                </li>
                <li style="text-align: center">
                    <br />
                    <hr />
                    <input type="submit" name="command" value="Save" class="k-button" /><input type="submit"
                        name="command" value="Cancel" class="k-button cancel" />
                    <input type="button" name="command" value="Delete" class="k-button cancel" id="btnDelete" />
                </li>
                <li class="status">
                    @Html.ValidationSummary(true)</li>
            </ul>
        </div>
    </div>
    <div id="deleteWindow">
    </div>
    <script>
        $('#btnDelete').click(function () {
            var deleteWindow = $('#deleteWindow').kendoWindow({
                modal: true,
                content: '@Url.Action("Delete", new { @id = @Model.EmployeeSetup.EmployeePK })'
            }).data('kendoWindow');
            deleteWindow.center();
            deleteWindow.open();
        });
    </script>
    
}
