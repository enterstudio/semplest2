@using System.Globalization
@model IEnumerable<Semplest.Admin.Models.HomeModel>
@{
    ViewBag.Title = "Index";
}
@section Title{
Account Service
}
@section Navbar{
    <script src="@Url.Content("~/Scripts/PanelBar.js")" type="text/javascript"></script>
}
@section Headscript{
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.js")" type="text/javascript"></script>
    <script type="text/jscript">
        $(document).ready(function () {
            $("#grid").kendoGrid(
      {
          groupable: false,
          scrollable: false,
          sortable: false,
          pageable: false
      }
      );
        });
    </script>
}
@section Links{
    @Html.Partial("TopMenu")
}
@using (Html.BeginForm("Index"))
{
    <div class='container'>
        <h3>
            Customer Accounts:</h3>
    </div> 
    <div class='container'>
        <div class='column span-9'>
            Search :
            <input type="text" id="usersearch" name="usersearch" class="k-textbox k-search" />
        </div>
        <div class='column span-5'>
            Account #
            <input type="text" id="accountnumbersearch" name="accountnumbersearch" class="k-textbox k-search1" />
        </div>
        <div class='column span-7'>
            eMail :
            <input type="text" id="emailsearch" name="emailsearch" class="k-textbox k-search" />
        </div>
        <div class='column span-3 last'>
            <input type="submit" value="Go" class="k-button" />
        </div>
    </div> 
    <div class='container'>
        <div class='column span-9'>
            <div style="margin-left: 46px; vertical-align: middle">
                <input type="radio" name="searchtype" value="Customer" />Customer
                <input type="radio" name="searchtype" value="LastName" />Last Name
            </div>
        </div>
        <div class='column span-5'>
        </div>
        <div class='column span-7'>
            <div style="margin-left: 200px;width:200px;">
            @Html.RouteLink("Add New Customer", new { Controller = "CustomerAccount", action = "Add" })
            </div>
        </div>
        <div class='column last span-3'>
            
        </div>
    </div> 
    
}
@if (TempData["message"] != null)
{
    <div style="color: red;">
        @TempData["message"]
    </div>
}
@if (!Model.Any())
{
    // table is empty
}
else
{ 
    <div class='container' style="overflow:auto; height:370px; width:800px; ">
    
        <table id="gradient-style" summary="Meeting Results">
            <thead>
                <tr>
                    <th scope="col">
                        Customer
                    </th>
                    <th scope="col">
                        Account #
                    </th>
                    <th scope="col">
                        First Name
                    </th>
                    <th scope="col">
                        Last Name
                    </th>
                    <th scope="col">
                        Email
                    </th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td colspan="5">
                        
                    </td>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.RouteLink(item.Customer, new { Controller = "AccountService", action = "Index", id = item.AccountNumber })
                        </td>
                        <td>
                            @Html.RouteLink(item.AccountNumber.ToString(), new { Controller = "AccountService", action = "Index", id = item.AccountNumber })
                        </td>
                        <td>
                            @Html.RouteLink(item.FirstName, new { Controller = "AccountService", action = "Index", id = item.AccountNumber })
                        </td>
                        <td>
                            @Html.RouteLink(item.LastName, new { Controller = "AccountService", action = "Index", id = item.AccountNumber })
                        </td>
                        <td>
                            @Html.RouteLink(item.Email, new { Controller = "AccountService", action = "Index", id = item.AccountNumber })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<style>
    h3
    {
        padding-left: 1px;
    }
    .k-search
    {
        width: 230px;
    }
    .k-search1
    {
        width: 90px;
    }
   
</style>
