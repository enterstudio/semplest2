@model Semplest.Core.Models.HomeModelParent
@{
    ViewBag.Title = "My Account";
}
@section Title{
    My Account
}
@section Links{
    <div id="examplesThemeChooser">
        <input type="button" class="k-button k-state-btnerror rounded" value="My Account" id="btnOne" />
        <input type="button" class="k-button rounded" value="Reporting" id="btnTwo" />
        <input type="button" class="k-button rounded" value="Billing" id="btnThree" />
    </div>
}

@section Navbar{
    <div id="panelbar-images">
    </div>
    <script type="text/javascript">
        $("#panelbar-images").kendoPanelBar({
            dataSource: [
                {
                    text: "Home",
                    items: [
                        { text: "Quick Start Guide" },
                        { text: "FAQs" },
                        { text: "Contact Us" },
                        { text: "Create User", url: "Home" },
                        { text: "Campaign", url: "Campaign/CampaignSetup" },
                        { text: "Search Keywords", url: "Home/SearchKeywords" }
                    ]
                }
            ]
        });

    </script>
}
