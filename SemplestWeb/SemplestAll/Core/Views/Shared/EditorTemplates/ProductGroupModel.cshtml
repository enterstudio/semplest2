@model Semplest.Core.Models.ProductGroupModel
<div id="productGroupModel">
    <div class="configuration">
        <ul class="options">
            <li>
                <h3>
                    @Model.Configuration.DefaultProductGroupName
                </h3>
                @Html.TextBoxFor(t => t.ProductGroupName, new { @class = "k-textbox", @required = true, @validationmessage = "Please enter " + @Model.Configuration.DefaultProductGroupName })
            </li>
            <li>
                <h3>
                    @Model.Configuration.DefaultProductPromotionName
                </h3>
                @Html.TextBoxFor(t => t.ProductPromotionName, new { @class = "k-textbox", @required = true, @validationmessage = "Please enter " + @Model.Configuration.DefaultProductPromotionName })
            </li>
            <li>
                <h3 style="margin-top: 5px;">
                    Description
                </h3>
                <label for="ProductGroupModel_Words" style="color: #BFBFBF;margin-top: 5px;">
                    Please type in several words or phrases that describe your business or what you
                    sell or are promoting (separated by commas) to help us build your search campaign:
                </label>
                <br/>
                @Html.TextBoxFor(t => t.Words, new { @class = "k-textbox", @required = true, @validationmessage = "Please enter Some Words", @style = "min-width:400px" })
            </li>
            <li>
                <h3>
                    Budget
                </h3>
                @(!@Model.IsEdit ? Html.TextBoxFor(t => t.Budget, new {@class = "k-textbox", @required = true, @validationmessage = "Please enter {0}"}) : Html.TextBoxFor(t => t.Budget, new {@class = "k-textbox", @required = true, @validationmessage = "Please enter {0}"}))
                <br/>
                <label style="color: #BFBFBF;margin-top: 5px;">Enter whole numbers only. Ex: $100 not $100.00 Minimum @Convert.ToInt32(@Model.Configuration.CustomerMinOrderAmount)</label>
            </li>
            <li>
                <label for="StartDate" class="required">
                    Product Start Date
                </label>
                @Html.TextBoxFor(t => t.StartDate, new { @class = "k-textbox", @required = true, @validationmessage = "Please select {0}", @placeholder = "Start" })
                <label for="StartEndDate" class="required">
                    Period
                </label>
                <select id="dropDownPeriodList" name="dropDownPeriodList">
                    <option value="EachMonth">Each Month</option>
                    <option value="SpecificMonth">Specific Period</option>
                </select>
                @Html.TextBoxFor(t => t.EndDate, new { @class = "k-textbox enddate", @validationmessage = "Please select {0}", @placeholder = "End" })
            </li>
            <li>
                <label for="SearchEngines" class="required">
                    Search Engines
                </label>
                <br/>
                @Html.CheckBoxListFor(t => t.AdEnginesList, t => t.AdvertisingEngines, t => t.Id, t => t.Name, t => t.AdEnginesSelectedList)
                @Html.ValidationMessageFor(t => t.AdEnginesList)

            </li>
            <li>
                <button class="k-button" id="save1" type="button">
                    <span class="k-update k-icon"></span>Continue
                </button>
            </li>
            <li class="status"></li>
        </ul>
    </div>
</div>
