@model Semplest.Core.Models.ReportIndexModel
@{
    ViewBag.Title = "ReportDetails";
}
<script type="text/javascript">
$(document).ready(function(){
    createChart();
    function createChart() {
        $("#chart").kendoChart({
        theme:'metro',
            dataSource: {
                transport: {
                    read: {
                        url: 'http://localhost:61294/Reporting/ReportGraph'
                    }, error: function (e) {
                        alert(e.xhr.responseText);
                    }
                },
                sort: {
                    field: "Date",
                    dir: "asc"
                }

            },
            title: {
                text: "Results for your Auto Insurance product group on Google for September 1 – 30, 2011"
            },
            legend: {
                position: "top"
            },
            seriesDefaults: {
                type: "line"
            },
            series:
                        [{
                            field: "Clicks",
                            name: "Clicks"
                        }, {
                            field: "Impressions",
                            name: "Impressions"
                        }],
            categoryAxis: {
                field: "Date",
                labels: {
                    rotation: -90
                }
            },
            valueAxis: {
                labels: {
                    format: "{0:N0}"
                },
                majorUnit: 2000
            },
            tooltip: {
                visible: true,
                format: "{0:N0}"
            }
        });
    }
    });
</script>
<div class="chart-wrapper" style="margin: auto;">
    <div id="chart">
    </div>
</div>
