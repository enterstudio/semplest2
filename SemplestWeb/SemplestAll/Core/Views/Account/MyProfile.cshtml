@model Semplest.Core.Models.ChildModel 
@{
    ViewBag.Title = "MyProfile(Child Customer Page)";
}
@section Title{
My Profile
}
@section headscript{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
    <script type="text/jscript">
        $(document).ready(function () {
            $("#datePicker").kendoDatePicker();
        });

        jQuery(function ($) {
            $("#Phone").mask("(999) 999-9999");
            $("#MiddleInitial").mask("a");
        });
    </script>
}
<style>
    .k-label
    {
        text-align: left;
        margin-left: 20px;
    }
    .extraspace
    {
        margin-left: 194px;
    }
    .k-dropdown
    {
        width: 135px;
    }
    .question
    {
        width:60%;
    }
</style>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.UserPK)
    @Html.HiddenFor(model => model.AccountNumber)
    <div class="table">
        <ul>
            <li>
                @Html.LabelFor(model => model.Customer, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.Customer, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.Customer)
                <label>
                    Account No # @Model.AccountNumber</label>
            </li>
            <li>
                @Html.LabelFor(model => model.Address1, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.Address1, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.Address1)
            </li>
            <li>
                @Html.TextBoxFor(model => model.Address2, new { @class = "k-textbox extraspace" })
                @Html.ValidationMessageFor(model => model.Address2)
            </li>
            <li>
                @Html.LabelFor(model => model.City, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.City, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.City)
            </li>
            <li>
                @Html.LabelFor(model => model.States, new { @class = "k-label" })
                @Html.DropDownListFor(r => r.SelectedStateID, Model.States, new { @class = "k-dropdown" })
            </li>
            <li>
                @Html.LabelFor(model => model.Zip, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.Zip, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.Zip)
            </li>
            <li>
                @Html.LabelFor(model => model.FirstName, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.FirstName, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.FirstName)
            </li>
            <li>
                @Html.LabelFor(model => model.MiddleInitial, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.MiddleInitial, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.MiddleInitial)
            </li>
            <li>
                @Html.LabelFor(model => model.LastName, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.LastName, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.LastName)
            </li>
            <li>
                @Html.LabelFor(model => model.Phone, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.Phone, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.Phone)
            </li>
            <li>
                @Html.LabelFor(model => model.Email, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.Email, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.Email)
            </li>
            <li>
                @Html.LabelFor(model => model.UserID, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.UserID, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.UserID)
            </li>
            <li>
                @Html.LabelFor(model => model, new { @class = "k-label" })
                <input class="k-textbox extraspace" data-val="true" data-val-required="The Password field is required." id="UserPassword" name="UserPassword" type="password" value=@Model.UserPassword  />
                @Html.ValidationMessageFor(model => model.UserPassword)
            </li>
            <li>
                @Html.LabelFor(model => model.SecurityQuestion, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.SecurityQuestion, new { @class = "k-textbox question" })
                @Html.ValidationMessageFor(model => model.SecurityQuestion)
            </li>
            <li>
                @Html.LabelFor(model => model.SecurityAnswer, new { @class = "k-label" })
                @Html.TextBoxFor(model => model.SecurityAnswer, new { @class = "k-textbox question" })
                @Html.ValidationMessageFor(model => model.SecurityAnswer)
            </li>
        </ul>
        <br />
        <hr />
        <div style="text-align: center">
            <input type="submit" name="command" value="Save" class="k-button" />
            <input type="submit" name="command" value="Cancel" class="k-button" />
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('#SelectedStateID').kendoDropDownList();
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    Url: ''
                }
            },
            schema: {
                model: {

                    fields: {

                    }
                }
            },
            batch: true,
            pageSize: 10
        });
        $("#CredcardinfoGrid").kendoGrid({
            dataSource: dataSource,
            pageable: true,
            height: 150,
            scrollable: true,
            columns: [
            {
                title: "NickName",
                field: ""
            },
            {
                title: "Account#",
                field: ""
            },
            {
                title: "Action",
                Command: ["edit", "destroy"]
            }
            ]
        });
    });
</script>
<input type="hidden" id="SideBarUrl" value='@System.Configuration.ConfigurationManager.AppSettings["SideBarUrl"]'/>