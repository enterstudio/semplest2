<processing>
  <job name="Run Post-Install Tasks">
    <os family="windows" />
    <executefile name="cmd">
      <arg>/c</arg>
      <arg>$INSTALL_PATH\post-install-tasks.bat</arg>
    </executefile>
  </job>
   <job name="Delete Post-Install Tasks Runner">
    <os family="windows" />
    <executefile name="cmd">
      <arg>/c</arg>
      <arg>del</arg>
      <arg>$INSTALL_PATH\post-install-tasks.bat</arg>
    </executefile>
  </job>
  <job name="Delete Post-Install Tasks Definition">
    <os family="windows" />
    <executefile name="cmd">
      <arg>/c</arg>
      <arg>del</arg>
      <arg>$INSTALL_PATH\build.xml</arg>
    </executefile>
  </job>
  <job name="Cleanup">
    <os family="windows" />
    <executefile name="cmd">
      <arg>/c</arg>
      <arg>rmdir</arg>
      <arg>/s</arg>
      <arg>/q</arg>
      <arg>$INSTALL_PATH\ant</arg>
    </executefile>
  </job>
 </processing>