@model SemplestWebApp.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
@section Title{Create Account}
@section Links {}
@section Navbar{
    <div id="panelbar-images">
    </div>
    <script>
        $("#panelbar-images").kendoPanelBar({
            dataSource: [
                        {
                            text: "Home",
                            items: [
                                { text: "Quick Start Guide" },
                                { text: "FAQs" },
                                { text: "Contact Us" }
                            ]
                        }
                    ]
        });

    </script>
}
@using (Html.BeginForm())
{
    <h2>
        Welcome!</h2>
    <div id="cap-view">
        <div id="options" align="center">
            <h3>
                User Name</h3>
            @Html.TextBoxFor(t => t.UserName, new { @class = "k-textbox" })
            <h3>
                Password</h3>
            @Html.PasswordFor(t => t.Password, new { @class = "k-textbox" })
            <br />
            <br />
            <button class="k-button" type="submit">
                Submit</button>
        </div>
    </div>
    <style scoped>
        #datasource-views
        {
            padding: 20px;
            border-bottom-color: Black;
            border-radius: 10px;
            border-style: solid;
            border-width: 2px;
            overflow: hidden;
        }
    </style>
}
